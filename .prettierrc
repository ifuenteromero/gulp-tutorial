{
	"jsxSingleQuote": true,
	"semi": true,
	"singleQuote": true,
	"arrowParens": "avoid",
	"tabWidth": 4,
	"bracketSameLine": false,
	"bracketSpacing": true,
	"trailingComma": "es5",
	"useTabs": true,
	"singleAttributePerLine": true,
	"overrides": [
		{
			"files": "*.css",
			"options": {
				"tabWidth": 4
			}
		},
		{
			"files": "*.scss",
			"options": {
				"tabWidth": 4,
				"useTabs": true
			}
		}
	]
}
